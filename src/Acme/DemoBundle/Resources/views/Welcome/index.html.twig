{% block scripts %}
    <script type="text/javascript">
        $('[data-toggle="product"]').click(function(e) {
            e.preventDefault();
            var url = $(this).attr('href');
            if (url.indexOf('#') == 0) {
                $(url).modal('open');
            } else {
                $.get(url, function(data) {
                    $('<div class="modal fade">' + data + '</div>').modal();
                });
            }
        });
    </script>
{% endblock %}